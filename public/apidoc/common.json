{
    "openapi": "3.0.0",
    "info": {
        "title": "JennySteamAPI文档",
        "description": "公共接口",
        "contact": {
            "name": "Develop Jenny"
        },
        "version": "1.0"
    },
    "servers": [
        {
            "url": "/",
            "description": "开发环境"
        }
    ],
    "paths": {
        "/api/system/common/file/upload": {
            "post": {
                "tags": [
                    "附件管理"
                ],
                "summary": "附件上传接口",
                "operationId": "876c4566da47c1074a97993e8f1bd07d",
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/FileUploadRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/FileUploadResponse"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/system/common/file/url": {
            "post": {
                "tags": [
                    "附件管理"
                ],
                "summary": "获取附件url",
                "operationId": "288a7b5b9f12468b56588e894840b314",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/FileUrlRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/FileUrlResponse"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/system/common/file/txtToAudio": {
            "post": {
                "tags": [
                    "附件管理"
                ],
                "summary": "文本转语音",
                "operationId": "f14d9abcc516f67ff1ddc41a9310539f",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/FileUrlRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/FileUrlResponse"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "GameVisitorGameQueryRequest": {
                "required": [],
                "properties": {
                    "category_ids": {
                        "description": "分类ID",
                        "type": "array",
                        "items": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                },
                "type": "object"
            },
            "GameVisitorIndexIndexRequest": {
                "required": [],
                "properties": {
                    "type": {
                        "description": "推荐类型： \"\"=综合,hot=最热,score=评分最高,cn_hot=国内流行,cn_score=国内评分最高",
                        "type": "integer",
                        "example": ""
                    }
                },
                "type": "object"
            },
            "GameCommonListBriefItemResponse": {
                "properties": {
                    "id": {
                        "description": "游戏ID",
                        "type": "integer"
                    },
                    "title": {
                        "description": "游戏标题",
                        "type": "string"
                    },
                    "short_description": {
                        "description": "简短描述",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "GameVisitorGameDetailResponse": {
                "properties": {
                    "id": {
                        "description": "游戏ID",
                        "type": "integer"
                    },
                    "title": {
                        "description": "游戏标题",
                        "type": "string"
                    },
                    "short_description": {
                        "description": "简短描述",
                        "type": "string"
                    },
                    "description": {
                        "description": "描述",
                        "type": "string"
                    },
                    "coming_soon": {
                        "description": "发布状态: 1=未发布 2=已发布",
                        "type": "1"
                    },
                    "release_date": {
                        "description": "发布日期（未发布时无）",
                        "type": "string",
                        "example": "2017-09-15"
                    },
                    "is_free": {
                        "description": "是否免费： 1=是 2=否",
                        "type": "integer"
                    },
                    "age_rating": {
                        "description": "年龄限制（如 PEGI 18+）",
                        "type": "integer"
                    },
                    "website_url": {
                        "description": "游戏官网URL",
                        "type": "string"
                    },
                    "os_windows": {
                        "description": "是否支持windows：0=未知 1=是 2=否",
                        "type": "integer"
                    },
                    "os_mac": {
                        "description": "是否支持mac：0=未知 1=是 2=否",
                        "type": "integer"
                    },
                    "os_linux": {
                        "description": "是否支持linux：0=未知 1=是 2=否",
                        "type": "integer"
                    },
                    "review_positive": {
                        "description": "评测：好评",
                        "type": "integer",
                        "example": 57565
                    },
                    "review_negative": {
                        "description": "评测：差评",
                        "type": "integer",
                        "example": 3551
                    },
                    "chart": {
                        "description": "历史评分",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/ChartOptionResponse"
                        }
                    }
                },
                "type": "object"
            },
            "GameVisitorGameQueryResponse": {
                "properties": {
                    "total": {
                        "description": "总数据条数",
                        "type": "integer",
                        "example": 1
                    },
                    "per_page": {
                        "description": "页长",
                        "type": "integer",
                        "example": 1
                    },
                    "current_page": {
                        "description": "当前页",
                        "type": "integer",
                        "example": 1
                    },
                    "last_page": {
                        "description": "最后一页",
                        "type": "integer",
                        "example": 1
                    },
                    "data": {
                        "description": "分页数据",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/GameCommonListBriefItemResponse"
                        }
                    }
                },
                "type": "object"
            },
            "GameVisitorIndexIndexResponse": {
                "properties": {
                    "url": {
                        "description": "附件URL地址",
                        "type": "string"
                    },
                    "name": {
                        "description": "原始文件名",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "IndexMenuItemResponse": {
                "properties": {
                    "id": {
                        "description": "ID",
                        "type": "integer",
                        "example": 1
                    },
                    "parent_id": {
                        "description": "父级ID",
                        "type": "integer",
                        "example": 0
                    },
                    "icon": {
                        "description": "菜单图标",
                        "type": "string",
                        "example": ""
                    },
                    "name": {
                        "description": "菜单名称",
                        "type": "string",
                        "example": "系统管理"
                    },
                    "path": {
                        "description": "菜单URL",
                        "type": "string",
                        "example": "/systemManagement"
                    }
                },
                "type": "object"
            },
            "IndexMenuResponse": {
                "properties": {
                    "menu": {
                        "description": "菜单",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/IndexMenuItemResponse"
                        }
                    }
                },
                "type": "object"
            },
            "FileUploadRequest": {
                "required": [
                    "file"
                ],
                "properties": {
                    "file": {
                        "description": "文件",
                        "type": "file",
                        "format": "binary"
                    }
                },
                "type": "object"
            },
            "FileUrlRequest": {
                "required": [
                    "path"
                ],
                "properties": {
                    "path": {
                        "description": "文本文件oss路径",
                        "type": "string",
                        "example": "call-center/upload/3/eaf330d7ba5a3aedce86c9554aed4ca5.txt"
                    }
                },
                "type": "object"
            },
            "FileUploadResponse": {
                "properties": {
                    "url": {
                        "description": "附件URL地址",
                        "type": "string"
                    },
                    "name": {
                        "description": "原始文件名",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "FileUrlResponse": {
                "properties": {
                    "url": {
                        "description": "附件URL地址",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "ChartOptionResponse": {
                "properties": {
                    "x": {
                        "description": "横坐标数据",
                        "type": "string",
                        "example": "2025-01-23"
                    },
                    "y": {
                        "description": "纵坐标数据0",
                        "type": "number",
                        "example": 1.1
                    }
                },
                "type": "object"
            },
            "OptionResponse": {
                "properties": {
                    "name": {
                        "description": "名称",
                        "type": "string",
                        "example": "name"
                    },
                    "val": {
                        "description": "值",
                        "type": "integer",
                        "example": 1
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
        {
            "name": "附件管理",
            "description": "附件管理"
        }
    ]
}