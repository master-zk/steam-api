{
    "openapi": "3.0.0",
    "info": {
        "title": "携华客服API文档",
        "description": "公共接口",
        "contact": {
            "name": "XH Develop Team"
        },
        "version": "1.0"
    },
    "servers": [
        {
            "url": "/",
            "description": "开发环境"
        }
    ],
    "paths": {
        "/api/game/visitor/category/select": {
            "get": {
                "tags": [
                    "分类"
                ],
                "summary": "游戏分类",
                "operationId": "fb467da53563e43ae72666580ece733e",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/OptionResponse"
                                    }
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/game/visitor/game/query": {
            "post": {
                "tags": [
                    "游戏"
                ],
                "summary": "游戏列表",
                "operationId": "ebba890697df71761c1a89ad46583640",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "页标",
                        "required": true,
                        "example": 1
                    },
                    {
                        "name": "page_size",
                        "in": "query",
                        "description": "页长",
                        "required": true,
                        "example": 10
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/GameVisitorGameQueryRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/GameVisitorGameQueryResponse"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/game/visitor/index/menu": {
            "get": {
                "tags": [
                    "首页"
                ],
                "summary": "菜单",
                "operationId": "b13d08f39d14d56f900f498c2185e0c0",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/IndexMenuResponse"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "GameVisitorGameQueryRequest": {
                "required": [],
                "properties": {
                    "category_ids": {
                        "description": "分类ID",
                        "type": "array",
                        "items": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                },
                "type": "object"
            },
            "GameVisitorIndexIndexRequest": {
                "required": [],
                "properties": {
                    "type": {
                        "description": "推荐类型： \"\"=综合,hot=最热,score=评分最高,cn_hot=国内流行,cn_score=国内评分最高",
                        "type": "integer",
                        "example": ""
                    }
                },
                "type": "object"
            },
            "GameCommonListBriefItemResponse": {
                "properties": {
                    "id": {
                        "description": "游戏ID",
                        "type": "integer"
                    },
                    "title": {
                        "description": "游戏标题",
                        "type": "string"
                    },
                    "short_description": {
                        "description": "简短描述",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "GameVisitorGameQueryResponse": {
                "properties": {
                    "total": {
                        "description": "总数据条数",
                        "type": "integer",
                        "example": 1
                    },
                    "per_page": {
                        "description": "页长",
                        "type": "integer",
                        "example": 1
                    },
                    "current_page": {
                        "description": "当前页",
                        "type": "integer",
                        "example": 1
                    },
                    "last_page": {
                        "description": "最后一页",
                        "type": "integer",
                        "example": 1
                    },
                    "data": {
                        "description": "分页数据",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/GameCommonListBriefItemResponse"
                        }
                    }
                },
                "type": "object"
            },
            "GameVisitorIndexIndexResponse": {
                "properties": {
                    "url": {
                        "description": "附件URL地址",
                        "type": "string"
                    },
                    "name": {
                        "description": "原始文件名",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "IndexMenuItemResponse": {
                "properties": {
                    "id": {
                        "description": "ID",
                        "type": "integer",
                        "example": 1
                    },
                    "parent_id": {
                        "description": "父级ID",
                        "type": "integer",
                        "example": 0
                    },
                    "icon": {
                        "description": "菜单图标",
                        "type": "string",
                        "example": ""
                    },
                    "name": {
                        "description": "菜单名称",
                        "type": "string",
                        "example": "系统管理"
                    },
                    "path": {
                        "description": "菜单URL",
                        "type": "string",
                        "example": "/systemManagement"
                    }
                },
                "type": "object"
            },
            "IndexMenuResponse": {
                "properties": {
                    "menu": {
                        "description": "菜单",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/IndexMenuItemResponse"
                        }
                    }
                },
                "type": "object"
            },
            "FileUploadRequest": {
                "required": [
                    "file"
                ],
                "properties": {
                    "file": {
                        "description": "文件",
                        "type": "file",
                        "format": "binary"
                    }
                },
                "type": "object"
            },
            "FileUrlRequest": {
                "required": [
                    "path"
                ],
                "properties": {
                    "path": {
                        "description": "文本文件oss路径",
                        "type": "string",
                        "example": "call-center/upload/3/eaf330d7ba5a3aedce86c9554aed4ca5.txt"
                    }
                },
                "type": "object"
            },
            "FileUploadResponse": {
                "properties": {
                    "url": {
                        "description": "附件URL地址",
                        "type": "string"
                    },
                    "name": {
                        "description": "原始文件名",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "FileUrlResponse": {
                "properties": {
                    "url": {
                        "description": "附件URL地址",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "OptionResponse": {
                "properties": {
                    "name": {
                        "description": "名称",
                        "type": "string",
                        "example": "name"
                    },
                    "val": {
                        "description": "值",
                        "type": "integer",
                        "example": 1
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
        {
            "name": "分类",
            "description": "分类"
        },
        {
            "name": "游戏",
            "description": "游戏"
        },
        {
            "name": "首页",
            "description": "首页"
        }
    ]
}